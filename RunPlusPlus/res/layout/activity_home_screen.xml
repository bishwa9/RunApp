<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen" >

    <Button
        android:id="@+id/registerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personName"
        android:layout_centerHorizontal="true"
        android:onClick="regChange"
        android:text="Register/Change" />

    <Button
        android:id="@+id/camActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cameraActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="startCameraActivity"
        android:text="Wanna take a picture? Tap me!" />

    <Button
        android:id="@+id/recordActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/runActivity"
        android:layout_marginTop="16dp"
        android:onClick="startRecordActivity"
        android:text="Compare yourself to others on the Server!" />

    <Button
        android:id="@+id/runActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="startRunActivity"
        android:text="Wanna Run? Tap me!" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/runActivity"
        android:layout_below="@+id/recordActivity"
        android:layout_marginTop="22dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text" >
    </EditText>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/registerPerson" >

        <TextView
            android:id="@+id/outH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </ScrollView>

</RelativeLayout>
